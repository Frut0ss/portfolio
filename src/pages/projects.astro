---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">All my projects</div>
  </div>

  <HorizontalCard
    title="Clece"
    img="/clece-preview.png"
    desc="Maintenance and web development of one of the most important services companies in Spain and Portugal."
    url="https://www.clece.es/en/"
    badge="PHP"
    badge2="HTML"
    badge3="React"
    badge4="CSS"
    badge5="Wodpress multisite"
    badge6="Twig"
  />
  <HorizontalCard
    title="Proyecto Hombre"
    img="/preview-ph.png"
    desc="Maintenance and web development of the most important government rehabilitation foundation in Spain. Integration of donation system with nukua CRM via API"
    url="https://proyectohombre.es"
    badge="PHP"
    badge2="TypeScript"
    badge4="CSS"
    badge5="Contentful"
  />

  <HorizontalCard
    title="UNIVERSAE"
    img="/preview-universae.png"
    desc="Responsible for the web department in charge of a work team of 6 people, creator of the website and a personalized payment gateway, integrated with ZOHO CRM"
    url="https://universae.com"
    badge="PHP"
    badge2="Plesk"
    badge3="Vue.js"
    badge4="CSS"
    badge5="Wordpress multisite"
  />

  <HorizontalCard
    title="San Miguel"
    img="/preview-sanmiguel.png"
    desc="Development and maintenance of the website for San Miguel, one of the most important brewing companies in Europe."
    url="https://www.sanmiguel.com"
    badge="PHP"
    badge2="React"
    badge3="CSS"
    badge5="Wordpress multisite"
    badge6="Twig"
  />

  <HorizontalCard
    title="Wakeuprights OXFAM"
    img="/preview-oxfam.png"
    desc="Web creation by crafting the layout structure and elements using Tailwind and Twig, utilizing Gutenberg's own blocks for the actual layout design. This web also has a very complex form built with react."
    url="https://tejiendoderechos.oxfamintermon.org"
    badge="PHP"
    badge2="React"
    badge3="Tailwind CSS"
    badge5="Wordpress"
    badge6="Twig"
  />

  <HorizontalCard
    title="El patio de Mahou"
    img="/preview-elpatio.png"
    desc="Webpage mainly build by react and conected via API with the CMS cockpit. This website has more than 100 events, which automatically update, these events have the possibility of purchasing tickets. (End of events 09/30/23)"
    url="https://www.mahou.es/el-patio/"
    badge="Vue.js"
    badge2="Tailwind CSS"
    badge5="Cockpit"
  />
</BaseLayout>
