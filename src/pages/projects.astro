    <div class="text-3xl w-full font-bold mb-5">All my projects</div>
  </div>

  <HorizontalCard
    title="Clece"
    img="clece-preview.png"
    desc="Maintenance and web development of one of the most important services companies in Spain and Portugal."
    url="https://www.clece.es/en/"
    badge="PHP"
    badge2="HTML"
    badge3="JavaScript"
    badge4="CSS"
    badge5="Timber"
    badge6="Twig"
  />
  <HorizontalCard
    title="Proyecto Hombre"
    img="preview-ph.png"
    desc="Maintenance and web development of the most important government rehabilitation foundation in Spain. Integration of donation system with nukua CRM via API"
    url="https://proyectohombre.es"
    badge="PHP"
    badge2="REACT"
    badge3="JavaScript"
    badge4="CSS"
    badge5="Timber"
    badge6="Twig"
  />

  <HorizontalCard
  title="UNIVERSAE"
  img="preview-universae.png"
